{
  "name": "react-for-quill",
  "version": "1.0.6",
  "description": "This is component for quill based on quill@2.0 and bun",
  "main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "bun test",
    "check": "prettier --check 'src/**/*'",
    "format": "prettier --write 'src/**/*'",
    "release": "bun bundle && npm publish",
    "bundle": "rm -rf dist/ && bun run scripts/bundle.js",
    "bundle:declaration": "dts-bundle-generator --config dts-config.json"
  },
  "engines": {
    "bun": ">= 1.x.x"
  },
  "keywords": [
    "react",
    "react-component",
    "rich",
    "text",
    "rich-text",
    "textarea",
    "quill",
    "react-quill",
    "react-quilljs",
    "react-quill2"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Duc-Developer/react-for-quill.git"
  },
  "author": "Duc-Developer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Duc-Developer/react-for-quill/issues"
  },
  "homepage": "https://github.com/Duc-Developer/react-for-quill#readme",
  "peerDependencies": {
    "quill": ">=2.0.2",
    "react": ">=18.2.0"
  },
  "dependencies": {
    "dompurify": "^3.1.5",
    "quill": "2.0.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.4",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.2.66",
    "bun-types": "latest",
    "dts-bundle-generator": "^9.5.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "clean-css": "^5.3.3"
  }
}
